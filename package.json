{
  "name": "confex",
  "version": "1.2.0",
  "description": "Type-safe configuration validation library for Node.js and TypeScript development environments.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [
    "config",
    "configuration",
    "validation",
    "typescript",
    "environment",
    "env",
    "schema",
    "type-safe",
    "builder-pattern",
    "nodejs",
    "development",
    "confex"
  ],
  "type": "module",
  "devDependencies": {
    "@types/node": "^24.0.14",
    "dotenv": "^17.2.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "typescript-eslint": "^8.37.0"
  }
}
